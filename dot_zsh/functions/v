v(){
  local old_IFS=$IFS
  IFS=$'\n'
  local files=($(fzf-tmux --query="$1" --multi --exit-0))
  [[ -n "$files" ]] && ${VISUAL:-vim} "${files[@]}"
  IFS=$old_IFS
}
# "vim recent", a quick and dirty version of https://github.com/rupa/v
vr(){
  local file=$(awk '/^>/ { sub(/^> /, "") ; print }' ~/.viminfo | fzf)
  ${VISUAL:-vim} "${file/\~/$HOME}"
}

