# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

## chezmoi commands ##
alias cz='chezmoi'
alias czs='chezmoi status'
alias cze='chezmoi edit'
alias czea='chezmoi edit --apply'
alias czap='chezmoi apply'
alias cza='chezmoi add'
alias czrm='chezmoi forget'
alias czdf='chezmoi diff'
alias czm='chezmoi merge'
alias czup='chezmoi update'

## git commands ##
alias g='git'
alias gs='git status -sb'
alias gbc='git branch --all --contains'
alias gtc='git tag --contains'
alias lg='lazygit'

# Include local-only aliases
[[ ! -f ~/.aliases.local ]] || source ~/.aliases.local
